<div class='col-sm-10'>
             
            <h1 >Book Instance List</h1>
            <ul>
                {{#each data}}
               
                {{#if this.Available}}
                   <li>TITLE: <a href = {{this.url}}>{{this.book.title}}</a> {{this.imprint}} <span class="text-success">{{this.status}}</span></li>  
{{else if this.Maintenance}}
   <li>TITLE: <a href = {{this.url}}>{{this.book.title}}</a> {{this.imprint}} <span class="text-danger">{{this.status}}</span> <span>due: {{this.due_back_formatted}}</span></li>
 
{{else}}
     <li>TITLE: <a href = {{this.url}}>{{this.book.title}}</a> {{this.imprint}} <span class="text-warning">{{this.status}}</span><span>due: {{this.due_back_formatted}}</span></li>
    
    
{{/if}}
                {{/each}}
            </ul>
            </div>
        </div>
    </div>
</body>

<script>

    Handlebars.registerHelper("equalityCheck", function(a,b,options) {
    if(a ===b) {
        return options.fn(this);
      }
      return options.inverse(this);
    
  });


</script>