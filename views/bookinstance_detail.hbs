<div class='col-sm-10'>
             <span style = "visibility:hidden;">{{data}}</span> 
            <h1 >ID: {{instanceDetails._id}}</h1>
            <p>TITLE : <a href = {{instanceDetails.book.url}}>{{instanceDetails.book.title}}</a></p>
            <p>IMPRINT: {{instanceDetails.imprint}}</p>
            {{#if instanceDetails.Available}}
            <span class="text-success">status: {{instanceDetails.status}}</span>
            {{else if instanceDetails.Maintenance}}
             <span class="text-danger">status: {{instanceDetails.status}}<br><span>DUE : {{instanceDetails.due_back_formatted}}</span></span>
              {{else if instanceDetails.Loaned}}
             <span class="text-warning">status: {{instanceDetails.status}}<br><span>DUE : {{instanceDetails.due_back_formatted}}</span></span>
             {{else}}
             <p>Book Copy not available</p>
            


            {{/if}}
            </div>
        </div>
    </div>
</body>